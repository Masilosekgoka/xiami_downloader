<controls:ResizeWindow
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:my="clr-namespace:MusicPlayer"
                        xmlns:controls="http://jean.doe/controls"
                        xmlns:common="clr-namespace:Jean_Doe.Common;assembly=Jean_Doe.Common"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"  x:Class="MusicPlayer.MainWindow"
                        WindowStyle="None"
                        Background="#01ffffff"
                        Foreground="{DynamicResource lightBrush}"
                        AllowsTransparency="True"
                        Icon="icon.ico"
                        SnapsToDevicePixels="True"
                        FontSize="15"
                        ResizeMode="CanResizeWithGrip"
                        x:Name="me"
                        FontFamily="Segoe UI Light;造字工房悦黑体验版纤细体"
                        Title="虾米下载" BorderWidth="5">
    <controls:ResizeWindow.Resources>
        <Style x:Key="ActionBarStyle" TargetType="Expander">
            <Setter Property="Template" Value="{DynamicResource charmBarTemplate}"/>
        </Style>
        <Style x:Key="charmBarButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Margin" Value="5,10"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Foreground" Value="{DynamicResource selectBrush}"/>
            <Setter Property="Background" Value="{DynamicResource selectBrush}"/>
        </Style>
        <ControlTemplate x:Key="charmBarTemplate" TargetType="{x:Type Expander}">
            <Grid Width="0" x:Name="wrapper" Background="{TemplateBinding Background}">
                <ContentPresenter VerticalAlignment="Center" x:Name="ExpanderContent" ContentSource="Content"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsExpanded" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation EasingFunction="{StaticResource easeFunc}"
                                                                Storyboard.TargetName="wrapper"
                                                                Storyboard.TargetProperty="Width"
                                                                To="120"
                                                                Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation EasingFunction="{StaticResource easeFunc}" 
                                                            Storyboard.TargetName="wrapper"
                                                                Storyboard.TargetProperty="Width"
                                                                To="0"
                                                                Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Storyboard x:Key="SlideIn">
            <ThicknessAnimation Duration="0:0:.2"
                                Storyboard.TargetProperty="Margin"
                                From="30,0,-30,0"
                                To="0"
                                EasingFunction="{StaticResource easeFunc}" />
            <DoubleAnimation Duration="0:0:.1"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1" />
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0"
                                         Value="True" />
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SlideOut">
            <DoubleAnimation Duration="0:0:0.1"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0" />
            <ThicknessAnimation Duration="0:0:.2"
                                Storyboard.TargetProperty="Margin"
                                To="-30,0,30,0"
                                From="0"
                                EasingFunction="{StaticResource easeFunc}" />
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0"
                                         Value="False" />
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>
        <Style TargetType="{x:Type Button}"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="MinWidth"
                    Value="80" />
            <Setter Property="Height"
                    Value="30" />
            <Setter Property="Margin"
                    Value="5,2" />
            <Setter Property="Padding"
                    Value="5,2" />
        </Style>
        <Style x:Key="{x:Type ResizeGrip}"
               TargetType="{x:Type ResizeGrip}">
            <Setter Property="OverridesDefaultStyle"
                    Value="true" />
            <Setter Property="Foreground"
                    Value="#555" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ResizeGrip}">
                        <Border Background="Transparent"
                                SnapsToDevicePixels="True"
                                Width="16"
                                Height="16">
                            <Viewbox>
                                <Path Fill="{TemplateBinding Foreground}"
                                      Data="M 4 0 L 4 4 L 0 4 z"/>
                            </Viewbox>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="true">
                    <Setter Property="Foreground"
                            Value="{DynamicResource skinBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <controls:IntToVisibilityConverter x:Key="int2vis" />
        <controls:IntToBoolConverter x:Key="int2bool" />
    </controls:ResizeWindow.Resources>
    <Grid>
        <Border x:Name="border"
                BorderBrush="{DynamicResource skinBrush}"
                Background="{DynamicResource darkBrush}"
                BorderThickness="0"/>
        <Grid   >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--navigation-->
            <Grid  x:Name="navi" Height="50"
                       Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <DockPanel LastChildFill="False">
                    <DockPanel.Resources>
                        <Style TargetType="Image">
                            <Setter Property="Width" Value="25"/>
                            <Setter Property="DockPanel.Dock" Value="Left"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="2"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="15"/>
                        </Style>
                    </DockPanel.Resources>
                    <TextBlock Text="虾米下载"
                           Width="100"
                           Visibility="Collapsed"
                           FontSize="20"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                    <ToggleButton x:Name="head1"
                              Style="{StaticResource toggleStyle}">
                        <DockPanel>
                            <Image Source="Resources/search1.png"  />
                            <TextBlock Text="{Binding ItemsCount, ElementName=list_search, StringFormat=\{0\}}" />
                        </DockPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="head2"
                              Style="{StaticResource toggleStyle}">
                        <DockPanel>
                            <Image Source="Resources/downloading.png"  />
                            <TextBlock Text="{Binding ItemsCount, ElementName=list_download, StringFormat= \{0\}}" />
                        </DockPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="head3"
                              Style="{StaticResource toggleStyle}">
                        <DockPanel>
                            <Image Source="Resources/music_record.png" />
                            <TextBlock Text="{Binding ItemsCount, ElementName=list_complete, StringFormat=\{0\}}" />
                        </DockPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="head4"
                              Style="{StaticResource toggleStyle}">
                        <DockPanel>
                            <Image Source="Resources/settings.png" />
                        </DockPanel>
                        <!--<TextBlock Text="配置" />-->
                    </ToggleButton>

                </DockPanel>
                <controls:TitleBar   Grid.Column="1" x:Name="titleBar" VerticalAlignment="Stretch"
                                 Margin="0,0,0,0" />
            </Grid>
            <!--contents-->
            <Border Grid.Row="1"
                    Background="Transparent">
                <Grid x:Name="content" Margin="10,0">
                    <Grid x:Name="page1"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <DockPanel>
                            <controls:SearchControl DockPanel.Dock="Top"    x:Name="searchKeywordControl" />
                            <controls:SearchSongListControl x:Name="list_search" />
                        </DockPanel>
                        <Expander Grid.Column="1" Style="{StaticResource ActionBarStyle}"    IsExpanded="{Binding SelectCount, Converter={StaticResource int2bool}, ElementName=list_search}" >
                            <StackPanel  >
                                <Button Click="btn_download_add_Click"
                                     Style="{StaticResource charmBarButton}"
                                    Content="下载" />
                            </StackPanel>
                        </Expander>
                    </Grid>
                    <Grid x:Name="page2"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <controls:DownloadSongListControl x:Name="list_download" />
                        <Expander  Grid.Column="1" Style="{StaticResource ActionBarStyle}"   
                                     IsExpanded="{Binding SelectCount, ElementName=list_download,Converter={StaticResource int2bool}}"
                                    >
                            <StackPanel>
                                <Button Click="btn_download_start_Click"
                                     Style="{StaticResource charmBarButton}"
                                    Content="开始" />
                                <Button Click="btn_cancel_Click"
                                     Style="{StaticResource charmBarButton}"
                                    Content="暂停" />
                                <Button Click="btn_remove_Click"
                                     Style="{StaticResource charmBarButton}"
                                    Content="删除" />
                                <Button x:Name="btn_complete"
                                     Style="{StaticResource charmBarButton}"
                                    Content="完成"
                                    Click="btn_complete_Click" />
                            </StackPanel>
                        </Expander>
                    </Grid>
                    <Grid x:Name="page3"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <controls:CompleteSongListControl x:Name="list_complete" />
                        <Expander IsExpanded="{Binding SelectCount,ElementName=list_complete,Converter={StaticResource int2bool}}"  Style="{StaticResource ActionBarStyle}"     Grid.Column="1">

                            <StackPanel>
                                <Button x:Name="btn_save_playlist"
                                     Style="{StaticResource charmBarButton}"
                                    Content="存为播放列表"
                                    Click="btn_save_playlist_Click" />
                                <Button Click="btn_play_Click"
                                     Style="{StaticResource charmBarButton}"
                                    Content="播放" />
                                <Button Click="btn_remove_complete_Click"
                                     Style="{StaticResource charmBarButton}"
                                    Content="删除" />
                            </StackPanel>
                        </Expander>
                    </Grid>
                    <Grid x:Name="page4"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <my:ConfigPage x:Name="configPage"  />
                        <Expander IsExpanded="{Binding IsDirty,ElementName=configPage}"  Style="{StaticResource ActionBarStyle}"     Grid.Column="1">
                            <StackPanel VerticalAlignment="Center" >
                                <Button x:Name="btn_save_config"
                                    Content="保存"
                                     Style="{StaticResource charmBarButton}"
                                    Click="btn_save_config_Click" />
                            </StackPanel>
                        </Expander>
                    </Grid>
                </Grid>
            </Border>

            <Grid Height="15" Grid.Row="2" >
                <TextBlock x:Name="statusBar"
                       HorizontalAlignment="Center"
                           Foreground="White"/>
                <controls:ProgressBar x:Name="busyIndicator"
                                  Foreground="{DynamicResource skinBrush}"
                                  Margin="0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Stretch"
                                   IsIndeterminate="False" ItemWidth="5" />
            </Grid>

        </Grid>
    </Grid>
</controls:ResizeWindow>
