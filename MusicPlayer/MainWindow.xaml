<Window  x:Class="MusicPlayer.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:my="clr-namespace:MusicPlayer"
         xmlns:controls="http://jean.doe/controls"
         xmlns:common="clr-namespace:Jean_Doe.Common;assembly=Jean_Doe.Common"
         WindowStyle="None"
         ResizeMode="CanResizeWithGrip"
         Background="#01ffffff"
         Foreground="{DynamicResource lightBrush}"
         AllowsTransparency="True"
         Icon="icon.ico"
         SnapsToDevicePixels="False"
         FontSize="13"
         x:Name="me"
         FontFamily="微软雅黑"
         Title="虾米下载">
    <Window.Resources>
        <Style TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="MinWidth"
                    Value="80" />
            <Setter Property="Height"
                    Value="30" />
            <Setter Property="Margin"
                    Value="5,2" />
            <Setter Property="Padding"
                    Value="5,2" />
        </Style>
        <Style x:Key="{x:Type ResizeGrip}"
               TargetType="{x:Type ResizeGrip}">
            <Setter Property="OverridesDefaultStyle"
                    Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ResizeGrip}">
                        <Border Background="Transparent"
                                SnapsToDevicePixels="True"
                                Width="16"
                                Height="16">
                            <Viewbox>
                                <Path Fill="{DynamicResource skinBrush}"
                                      Data="M 4 0 L 4 4 L 0 4 z"></Path>
                            </Viewbox>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <controls:IntToVisibilityConverter x:Key="int2vis" />
    </Window.Resources>
    <Grid>
        <Border x:Name="border"
                Background="{DynamicResource darkBrush}"
                BorderBrush="{DynamicResource skinBrush}"
                BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"
                                  BlurRadius="5"
                                  Color="Black" />
            </Border.Effect>
        </Border>
        <Grid  Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--navigation-->
            <controls:TitleBar Title=""
                               x:Name="titleBar"
                               Margin="0,-5,-5,0" />
            <DockPanel LastChildFill="False"
                       x:Name="navi"
                       Margin="0">
                <controls:ProgressBar ItemWidth="5"
                                      x:Name="busyIndicator"
                                      Margin="0"
                                      IsIndeterminate="False"
                                      HorizontalAlignment="Stretch"
                                      DockPanel.Dock="Bottom" />
                <TextBlock Text="虾米下载"
                           Width="100"
                           Visibility="Collapsed"
                           FontSize="20"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                <Expander x:Name="expander1"
                          ExpandDirection="Right">
                    <Expander.Header>
                        <TextBlock Text="{Binding ItemsCount,ElementName=list_search,StringFormat=搜索 ({0})}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                            <Setter Property="Padding"
                                    Value="5" />
                            <Setter Property="Margin"
                                    Value="5,0" />
                            <Setter Property="Foreground"
                                    Value="{Binding Foreground,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ToggleButton}}" />
                            <Setter Property="FontWeight"
                                    Value="{Binding FontWeight,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ToggleButton}}" />
                            <Setter Property="FontSize"
                                    Value="15" />
                            </Style>
                        </TextBlock.Style></TextBlock>
                    </Expander.Header>
                    <Expander.Template>
                        <ControlTemplate TargetType="{x:Type Expander}">
                            <DockPanel>
                                <ToggleButton x:Name="ExpanderButton"
                                              Style="{StaticResource toggleStyle}"
                                              Content="{TemplateBinding Header}" />
                                <!--IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"-->
                                <ContentPresenter x:Name="ExpanderContent"
                                                  DockPanel.Dock="Right"
                                                  ContentSource="Content">
                                    <ContentPresenter.LayoutTransform>
                                        <ScaleTransform ScaleX="0" />
                                    </ContentPresenter.LayoutTransform>
                                </ContentPresenter>
                            </DockPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsExpanded"
                                         Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation EasingFunction="{StaticResource easeFunc}"
                                                                 Storyboard.TargetName="ExpanderContent"
                                                                 Storyboard.TargetProperty="(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleX)"
                                                                 To="1"
                                                                 Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ExpanderContent"
                                                                 Storyboard.TargetProperty="(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleX)"
                                                                 To="0"
                                                                 Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Expander.Template>
                    <DockPanel>
                        <Rectangle Fill="{DynamicResource skinBrush}"
                                   HorizontalAlignment="Stretch"
                                   DockPanel.Dock="Bottom"
                                   Height="2"
                                   Margin="-5,0,5,0" />
                        <controls:SearchControl Margin="5"
                                                x:Name="searchKeywordControl" />
                    </DockPanel>
                </Expander>
                <ToggleButton x:Name="head2"
                              Style="{StaticResource toggleStyle}">
                    <TextBlock Text="{Binding ItemsCount,ElementName=list_download,StringFormat=下载 ({0})}" />
                </ToggleButton>
                <ToggleButton x:Name="head3"
                              Style="{StaticResource toggleStyle}">
                    <TextBlock Text="{Binding ItemsCount,ElementName=list_complete,StringFormat=完成 ({0})}" />
                </ToggleButton>
                <ToggleButton x:Name="head4"
                              Style="{StaticResource toggleStyle}">
                    <TextBlock Text="配置" />
                </ToggleButton>
            </DockPanel>
            <!--contents-->
            <Border Grid.Row="1"
                    Background="Transparent">
                <Grid>
                    <Grid x:Name="page1"
                          Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <DockPanel></DockPanel>
                        <controls:SearchSongListControl Grid.Row="1"
                                                        x:Name="list_search" />
                        <StackPanel  Grid.Row="2"
                                     Visibility="{Binding SelectCount, ElementName=list_search,Converter={StaticResource int2vis}}"
                                     Orientation="Horizontal">
                            <Button Click="btn_download_add_Click"
                                    Content="加入下载队列"
                                    Height="30" />
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="page2"
                          Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <controls:DownloadSongListControl x:Name="list_download" />
                        <StackPanel  Grid.Row="1"
                                     Visibility="{Binding SelectCount, ElementName=list_download,Converter={StaticResource int2vis}}"
                                     Orientation="Horizontal">
                            <Button Click="btn_download_start_Click"
                                    Content="下载" />
                            <Button Click="btn_cancel_Click"
                                    Content="取消" />
                            <Button Click="btn_remove_Click"
                                    Content="删除" />
                            <Button x:Name="btn_complete"
                                    Content="完成"
                                    Click="btn_complete_Click" />
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="page3"
                          Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <controls:CompleteSongListControl x:Name="list_complete" />
                        <StackPanel  Grid.Row="1"
                                     Visibility="{Binding SelectCount, ElementName=list_complete,Converter={StaticResource int2vis}}"
                                     Orientation="Horizontal">
                            <Button x:Name="btn_save_playlist"
                                    Content="存为播放列表"
                                    Click="btn_save_playlist_Click" />
                            <Button Click="btn_play_Click"
                                    Content="播放"
                                    Height="30" />
                            <Button Click="btn_remove_complete_Click"
                                    Content="删除" />
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="page4"
                          Visibility="Collapsed">
                        <my:ConfigPage />
                    </Grid>
                </Grid>
            </Border>
            <TextBlock x:Name="statusBar"
                       Grid.Row="2" />
        </Grid>
    </Grid>
</Window>
