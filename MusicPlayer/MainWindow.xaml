<controls:ResizeWindow  x:Class="MusicPlayer.MainWindow"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:my="clr-namespace:MusicPlayer"
                        xmlns:controls="http://jean.doe/controls"
                        xmlns:common="clr-namespace:Jean_Doe.Common;assembly=Jean_Doe.Common"
                        WindowStyle="None"
                        Background="#01ffffff"
                        Foreground="{DynamicResource lightBrush}"
                        AllowsTransparency="True"
                        Icon="icon.ico"
                        SnapsToDevicePixels="True"
                        FontSize="15"
                        ResizeMode="CanResizeWithGrip"
                        x:Name="me"
                        BorderWidth="5"
                        FontFamily="Segoe UI Light;造字工房悦黑体验版纤细体"
                        Title="虾米下载">
    <controls:ResizeWindow.Resources>
        <Style x:Key="ActionBarStyle" TargetType="Grid">
            <Setter Property="Background" Value="{StaticResource selectBrush}"/>
        </Style>
        <ControlTemplate x:Key="charmBarTemplate" TargetType="{x:Type Expander}">
            <Grid Width="0" x:Name="wrapper" Style="{StaticResource ActionBarStyle}">
                <ContentPresenter x:Name="ExpanderContent" ContentSource="Content"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsExpanded" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation EasingFunction="{StaticResource easeFunc}"
                                                                Storyboard.TargetName="wrapper"
                                                                Storyboard.TargetProperty="Width"
                                                                To="120"
                                                                Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation EasingFunction="{StaticResource easeFunc}" 
                                                            Storyboard.TargetName="wrapper"
                                                                Storyboard.TargetProperty="Width"
                                                                To="0"
                                                                Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Storyboard x:Key="SlideIn">
            <ThicknessAnimation Duration="0:0:.2"
                                Storyboard.TargetProperty="Margin"
                                From="-20,0,20,0"
                                To="0"
                                DecelerationRatio=".7" />
            <DoubleAnimation Duration="0:0:.1"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1" />
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0"
                                         Value="True" />
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SlideOut">
            <DoubleAnimation Duration="0:0:0.1"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0" />
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0"
                                         Value="False" />
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>
        <Style TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="MinWidth"
                    Value="80" />
            <Setter Property="Height"
                    Value="30" />
            <Setter Property="Margin"
                    Value="5,2" />
            <Setter Property="Padding"
                    Value="5,2" />
        </Style>
        <Style x:Key="{x:Type ResizeGrip}"
               TargetType="{x:Type ResizeGrip}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="true">
                    <Setter Property="Foreground"
                            Value="{DynamicResource skinBrush}" />
                </Trigger>
            </Style.Triggers>
            <Setter Property="OverridesDefaultStyle"
                    Value="true" />
            <Setter Property="Foreground"
                    Value="#555" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ResizeGrip}">
                        <Border Background="Transparent"
                                SnapsToDevicePixels="True"
                                Width="16"
                                Height="16">
                            <Viewbox>
                                <Path Fill="{TemplateBinding Foreground}"
                                      Data="M 4 0 L 4 4 L 0 4 z"></Path>
                            </Viewbox>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <controls:IntToVisibilityConverter x:Key="int2vis" />
        <controls:IntToBoolConverter x:Key="int2bool" />
    </controls:ResizeWindow.Resources>
    <Grid>
        <Border x:Name="border"
                Background="{DynamicResource darkBrush}"
                BorderBrush="{DynamicResource skinBrush}"
                BorderThickness="1.5">
        </Border>
        <Grid  Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--navigation-->
            <controls:TitleBar Title=""
                               x:Name="titleBar"
                               Margin="0,-5,-5,0" />
            <DockPanel LastChildFill="False"
                       x:Name="navi"
                       Margin="0">
                <TextBlock Text="虾米下载"
                           Width="100"
                           Visibility="Collapsed"
                           FontSize="20"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                <Expander x:Name="expander1"
                          ExpandDirection="Right">
                    <Expander.Header>
                        <TextBlock Text="{Binding ItemsCount,ElementName=list_search,StringFormat=搜索 ({0})}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                            <Setter Property="Padding"
                                    Value="5" />
                            <Setter Property="Margin"
                                    Value="5,0" />
                            <Setter Property="Foreground"
                                    Value="{Binding Foreground,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ToggleButton}}" />
                            <Setter Property="FontWeight"
                                    Value="{Binding FontWeight,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ToggleButton}}" />
                            <Setter Property="FontSize"
                                    Value="15" />
                            </Style>
                        </TextBlock.Style></TextBlock>
                    </Expander.Header>
                    <Expander.Template>
                        <ControlTemplate TargetType="{x:Type Expander}">
                            <DockPanel>
                                <ToggleButton x:Name="ExpanderButton"
                                              Style="{StaticResource toggleStyle}"
                                              Content="{TemplateBinding Header}" />
                                <!--IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"-->
                                <ContentPresenter x:Name="ExpanderContent"
                                                  DockPanel.Dock="Right"
                                                  ContentSource="Content">
                                    <ContentPresenter.LayoutTransform>
                                        <ScaleTransform ScaleX="0" />
                                    </ContentPresenter.LayoutTransform>
                                </ContentPresenter>
                            </DockPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsExpanded"
                                         Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation EasingFunction="{StaticResource easeFunc}"
                                                                 Storyboard.TargetName="ExpanderContent"
                                                                 Storyboard.TargetProperty="(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleX)"
                                                                 To="1"
                                                                 Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ExpanderContent"
                                                                 Storyboard.TargetProperty="(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleX)"
                                                                 To="0"
                                                                 Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Expander.Template>
                    <DockPanel>
                        <Rectangle Fill="{DynamicResource skinBrush}"
                                   HorizontalAlignment="Stretch"
                                   DockPanel.Dock="Bottom"
                                   Height="2"
                                   Margin="-5,0,5,0" />
                        <controls:SearchControl Margin="5"
                                                x:Name="searchKeywordControl" />
                    </DockPanel>
                </Expander>
                <ToggleButton x:Name="head2"
                              Style="{StaticResource toggleStyle}">
                    <TextBlock Text="{Binding ItemsCount,ElementName=list_download,StringFormat=下载 ({0})}" />
                </ToggleButton>
                <ToggleButton x:Name="head3"
                              Style="{StaticResource toggleStyle}">
                    <TextBlock Text="{Binding ItemsCount,ElementName=list_complete,StringFormat=完成 ({0})}" />
                </ToggleButton>
                <ToggleButton x:Name="head4"
                              Style="{StaticResource toggleStyle}">
                    <TextBlock Text="配置" />
                </ToggleButton>
            </DockPanel>
            <!--contents-->
            <Border Grid.Row="1"
                    Background="Transparent">
                <Grid x:Name="content">
                    <Grid x:Name="page1"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <DockPanel></DockPanel>
                        <controls:SearchSongListControl Grid.Row="1"
                                                        x:Name="list_search" />
                        <StackPanel  Grid.Row="2"
                                     Visibility="{Binding SelectCount, ElementName=list_search,Converter={StaticResource int2vis}}"
                                     Orientation="Horizontal">
                            <Button Click="btn_download_add_Click"
                                    Content="下载"
                                    Height="30" />
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="page2"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <controls:DownloadSongListControl x:Name="list_download" />
                        <StackPanel  Grid.Row="1"
                                     Visibility="{Binding SelectCount, ElementName=list_download,Converter={StaticResource int2vis}}"
                                     Orientation="Horizontal">
                            <Button Click="btn_download_start_Click"
                                    Content="开始" />
                            <Button Click="btn_cancel_Click"
                                    Content="暂停" />
                            <Button Click="btn_remove_Click"
                                    Content="删除" />
                            <Button x:Name="btn_complete"
                                    Content="完成"
                                    Click="btn_complete_Click" />
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="page3"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <controls:CompleteSongListControl x:Name="list_complete" />
                        <Expander IsExpanded="{Binding SelectCount,ElementName=list_complete,Converter={StaticResource int2bool}}"  Template="{StaticResource charmBarTemplate}" Grid.Column="1">
                            <StackPanel VerticalAlignment="Center" >
                                <StackPanel.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Margin" Value="5,10"/>
                                        <Setter Property="Height" Value="60"/>
                                    </Style>
                                </StackPanel.Resources>
                                <Button x:Name="btn_save_playlist"
                                    Content="存为播放列表"
                                    Click="btn_save_playlist_Click" />
                                <Button Click="btn_play_Click"
                                    Content="播放" />
                                <Button Click="btn_remove_complete_Click"
                                    Content="删除" />
                            </StackPanel>
                        </Expander>
                    </Grid>
                    <Grid x:Name="page4"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <my:ConfigPage />
                    </Grid>
                </Grid>
            </Border>
            <controls:ProgressBar ItemWidth="5"
                                  x:Name="busyIndicator"
                                  Margin="0"
                                  Grid.Row="2"
                                  IsIndeterminate="False"
                                  HorizontalAlignment="Stretch"
                                  DockPanel.Dock="Bottom" />
            <TextBlock x:Name="statusBar"
                       Grid.Row="2" />
        </Grid>
    </Grid>
</controls:ResizeWindow>
