<controls:ResizeWindow
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:my="clr-namespace:MusicPlayer"
                        xmlns:controls="http://jean.doe/controls"
                        xmlns:common="clr-namespace:Jean_Doe.Common;assembly=Jean_Doe.Common"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"  x:Class="MusicPlayer.MainWindow"
                        WindowStyle="None"
                        Background="#01ffffff"
                        Foreground="{DynamicResource lightBrush}"
                        AllowsTransparency="True"
                        Icon="icon.ico"
                        SnapsToDevicePixels="True"
                        FontSize="15"
                        ResizeMode="CanResizeWithGrip"
                        x:Name="me"
                     MinHeight="480"
                    SizeToContent="Manual"
                         MinWidth="640"
                        FontFamily="Segoe UI Light;造字工房悦黑体验版纤细体"
                        Title="虾米下载" BorderWidth="5">
    <controls:ResizeWindow.Resources>
        <controls:BoolToVisibilityConverter x:Key="bool2vis" />
        <Storyboard x:Key="Maximize">
            <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Left" />
            <DoubleAnimation  Duration="0:0:0.2" Storyboard.TargetProperty="Top"  />
            <DoubleAnimation  Duration="0:0:0.2" Storyboard.TargetProperty="Width" />
            <DoubleAnimation  Duration="0:0:0.2" Storyboard.TargetProperty="Height"  />
        </Storyboard>
        <Style x:Key="ActionBarStyle" TargetType="Expander">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Template" Value="{DynamicResource charmBarTemplate}"/>
        </Style>
        <Style x:Key="charmBarButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Foreground" Value="{DynamicResource selectBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        <ControlTemplate x:Key="charmBarTemplate" TargetType="{x:Type Expander}">
            <Grid Width="0" x:Name="wrapper" Background="{TemplateBinding Background}">
                <ContentPresenter VerticalAlignment="Center" x:Name="ExpanderContent" ContentSource="Content"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsExpanded" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation EasingFunction="{StaticResource easeFunc}"
                                                                Storyboard.TargetName="wrapper"
                                                                Storyboard.TargetProperty="Width"
                                                                To="150"
                                                                Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation EasingFunction="{StaticResource easeFunc}" 
                                                            Storyboard.TargetName="wrapper"
                                                                Storyboard.TargetProperty="Width"
                                                                To="0"
                                                                Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Storyboard x:Key="SlideInRight">
            <ThicknessAnimation Duration="0:0:.2"
                                Storyboard.TargetProperty="Margin"
                                From="30,0,-30,0"
                                To="0"
                                EasingFunction="{StaticResource easeFunc}" />
            <DoubleAnimation Duration="0:0:.1"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1" />
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0"
                                         Value="True" />
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SlideInLeft">
            <ThicknessAnimation Duration="0:0:.2"
                                Storyboard.TargetProperty="Margin"
                                From="-30,0,30,0"
                                To="0"
                                EasingFunction="{StaticResource easeFunc}" />
            <DoubleAnimation Duration="0:0:.1"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1" />
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0"
                                         Value="True" />
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SlideOut">
            <DoubleAnimation Duration="0:0:0.1"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0" />
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsHitTestVisible">
                <DiscreteBooleanKeyFrame KeyTime="0"
                                         Value="False" />
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="anim_show_more" Storyboard.TargetName="navi">
            <DoubleAnimation Storyboard.TargetProperty="Height" Duration="0:0:0.2" To="80" EasingFunction="{StaticResource easeFunc}"/>
        </Storyboard>
        <Storyboard x:Key="anim_hide_more" Storyboard.TargetName="navi">
            <DoubleAnimation Storyboard.TargetProperty="Height" Duration="0:0:0.2" To="50" EasingFunction="{StaticResource easeFunc}"/>
        </Storyboard>
        <Style TargetType="{x:Type Button}"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="MinWidth"
                    Value="80" />
            <Setter Property="Height"
                    Value="30" />
            <Setter Property="Margin"
                    Value="5,2" />
            <Setter Property="Padding"
                    Value="5,2" />
        </Style>
        <Style x:Key="{x:Type ResizeGrip}"
               TargetType="{x:Type ResizeGrip}">
            <Setter Property="OverridesDefaultStyle"
                    Value="true" />
            <Setter Property="Foreground"
                    Value="#555" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ResizeGrip}">
                        <Border Background="Transparent"
                                SnapsToDevicePixels="True"
                                Width="16"
                                Height="16">
                            <Viewbox>
                                <Path Fill="{TemplateBinding Foreground}"
                                      Data="M 4 0 L 4 4 L 0 4 z"/>
                            </Viewbox>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="true">
                    <Setter Property="Foreground"
                            Value="{DynamicResource skinBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <controls:IntToVisibilityConverter x:Key="int2vis" />
        <controls:IntToBoolConverter x:Key="int2bool" />
    </controls:ResizeWindow.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="border"
                BorderBrush="Black"
                Background="{DynamicResource darkBrush}"
                BorderThickness="2"/>
       
        <Grid Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--navigation-->
            <Grid  x:Name="navi" Width="700" HorizontalAlignment="Left"
                   Height="50"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="15"/>
                    </Style>
                    <Style TargetType="TextBlock" x:Key="glyph">
                        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="20"/>
                    </Style>
                    <Style TargetType="TextBlock" x:Key="hint">
                        <Setter Property="Margin" Value="5,10,5,0"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="15"/>
                    </Style>
                </Grid.Resources>
                <ToggleButton x:Name="head1"
                              Style="{StaticResource toggleStyle}">
                    <StackPanel>
                        <DockPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xE11a;" Style="{StaticResource glyph}"/>
                            <TextBlock Visibility="{Binding ItemsCount,Converter={StaticResource int2vis}, ElementName=list_search}" Text="{Binding ItemsCount, ElementName=list_search, StringFormat=\{0\}}" />
                        </DockPanel>
                        <TextBlock Text="搜索"  Style="{StaticResource hint}" />
                    </StackPanel>
                    
                </ToggleButton>
                <ToggleButton x:Name="head2"
                                  Grid.Column="1"
                              Style="{StaticResource toggleStyle}">
                    <StackPanel>
                        <DockPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xE118;" Style="{StaticResource glyph}"/>
                            <TextBlock Visibility="{Binding ItemsCount,Converter={StaticResource int2vis}, ElementName=list_download}" Text="{Binding ItemsCount, ElementName=list_download, StringFormat= \{0\}}" />
                        </DockPanel>
                        <TextBlock Text="下载中"   Style="{StaticResource hint}"/>
                    </StackPanel>
                </ToggleButton>

                <ToggleButton x:Name="head3"
                                    Grid.Column="2"
                              Style="{StaticResource toggleStyle}">
                    <StackPanel Orientation="Vertical" Width="80">
                        <DockPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xE0A5;" Style="{StaticResource glyph}"/>
                            <TextBlock Visibility="{Binding ItemsCount, Converter={StaticResource int2vis}, ElementName=list_complete}" Text="{Binding ItemsCount, ElementName=list_complete, StringFormat=\{0\}}" />
                        </DockPanel>
                        <TextBlock Text="已下载"  Style="{StaticResource hint}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton x:Name="head4" 
                                    Grid.Column="3"
                              Style="{StaticResource toggleStyle}">
                    <StackPanel Orientation="Vertical">
                        <DockPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xE115;" Style="{StaticResource glyph}"/>
                        </DockPanel>
                        <TextBlock Text="配置" Style="{StaticResource hint}"/>
                    </StackPanel>
                    <!--<TextBlock Text="配置" />-->
                </ToggleButton>
                <ToggleButton x:Name="more"
                                    Grid.Column="4"
                                  Click="btn_more_Click"
                              Style="{StaticResource toggleStyle}">
                    <DockPanel>
                        <TextBlock Text="&#xE0C2;" FontFamily="Segoe Ui Symbol"/>
                    </DockPanel>
                </ToggleButton>
            </Grid>
            <Rectangle Fill="{DynamicResource skinBrush}" Height="2" VerticalAlignment="Bottom"/>
            <!--contents-->
            <Border Grid.Row="1"
                    Background="Transparent">
                <Grid x:Name="content" Margin="40,30">
                    <Grid x:Name="page1"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <DockPanel>
                            <controls:SearchControl DockPanel.Dock="Top"    x:Name="searchKeywordControl" />
                            <controls:SearchSongListControl x:Name="list_search" />
                        </DockPanel>
                    </Grid>
                    <Grid x:Name="page2"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <controls:DownloadSongListControl x:Name="list_download" />
                    </Grid>
                    <Grid x:Name="page3"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <controls:CompleteSongListControl x:Name="list_complete" />
                        
                    </Grid>
                    <Grid x:Name="page4"
                          Opacity="0"
                          IsHitTestVisible="false">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <my:ConfigPage x:Name="configPage"  />
                    </Grid>
                </Grid>
            </Border>

            <Grid Height="15" Grid.Row="2" >
                <TextBlock x:Name="statusBar"
                       HorizontalAlignment="Center"
                           Foreground="White"/>
                <controls:ProgressBar x:Name="busyIndicator"
                                  Foreground="{DynamicResource skinBrush}"
                                  Margin="0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Stretch"
                                   IsIndeterminate="False" ItemWidth="5" />
            </Grid>
        </Grid>
        <Expander x:Name="charmBar" Grid.RowSpan="3" HorizontalAlignment="Right" Margin="2" Style="{StaticResource ActionBarStyle}">
            <ListView    BorderThickness="0" Background="Transparent" x:Name="charmBarItemWrapper" SelectionMode="Single">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="0,20"/>
                        <Setter Property="Padding" Value="20,10,0,10"/>
                        <Setter Property="Foreground" Value="White"/>
                        <EventSetter Event="MouseLeftButtonUp" Handler="charmBarAct"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Name="Border" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                                        <Border.Background>
                                            <SolidColorBrush x:Name="BorderBg" Color="Black"/>
                                        </Border.Background>
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard Storyboard.TargetName="BorderBg">
                                                        <ColorAnimation Storyboard.TargetProperty="Color" Duration="0:0:0.2" To="#333"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard Storyboard.TargetName="BorderBg">
                                                        <ColorAnimation Storyboard.TargetProperty="Color"  Duration="0:0:0.2" To="Black"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Foreground="Gray"  Text="{Binding Label}"/>
                            <TextBlock Foreground="White"  Visibility="{Binding IsActive,Converter={StaticResource bool2vis}}" Text="{Binding Label}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Expander>
        <controls:TitleBar  HorizontalAlignment="Right" VerticalAlignment="Top" Width="150" x:Name="titleBar" 
                                 Margin="2" />
    </Grid>
</controls:ResizeWindow>
