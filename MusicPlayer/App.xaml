<Application x:Class="MusicPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Jean_Doe.MusicControl;component/Themes/ScrollBarStyle.xaml" />
                <ResourceDictionary Source="/Jean_Doe.MusicControl;component/Themes/TouchButtonStyle.xaml" />
                <ResourceDictionary Source="/Jean_Doe.MusicControl;component/Themes/ComboBoxStyle.xaml" />
                <ResourceDictionary Source="Slider.xaml" />
                <ResourceDictionary Source="ToggleButton.xaml" />
                <ResourceDictionary>
                    <Color x:Key="skinColor">Red</Color>
                    <SolidColorBrush x:Key="selectBrush"
                                     Color="#222" />
                    <SolidColorBrush x:Key="darkBrush"
                                     Color="#333" />
                    <SolidColorBrush x:Key="lightBrush"
                                     Color="#aaa" />
                    <SolidColorBrush  x:Key='skinBrush' Color="{DynamicResource skinColor}" />
                    <SolidColorBrush x:Key="ColorSkin"
                                     Color="Black" />
                    <LinearGradientBrush x:Key="BrushOver"
                                         EndPoint="0,1"
                                         StartPoint="0,0">
                        <GradientStop Color="#01000000"
                                      Offset="0.0" />
                        <GradientStop Color="#22000000"
                                      Offset="1.0" />
                    </LinearGradientBrush>
                    <LinearGradientBrush x:Key="BorderBrush"
                                         EndPoint="0,1"
                                         StartPoint="0,0">
                        <GradientStop Offset="0"
                                      Color="White" />
                        <GradientStop Offset="1"
                                      Color="#00ffffff" />
                    </LinearGradientBrush>
                    <QuadraticEase x:Key="easeFunc"
                                   EasingMode="EaseOut" />
                 
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
