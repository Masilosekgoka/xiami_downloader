<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="BrushOver"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Color="#44ffffff"
                      Offset="0.0" />
        <GradientStop Color="#00ffffff"
                      Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BorderBrush"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Offset="0"
                      Color="White" />
        <GradientStop Offset="1"
                      Color="#00ffffff" />
    </LinearGradientBrush>
    <Style TargetType="Button">
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="Background"
                Value="{DynamicResource skinBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="grid">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.2"
                                                      To="MouseOver" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                       Storyboard.TargetName="OverRect">
                                            <EasingDoubleKeyFrame KeyTime="0"
                                                                  Value="1" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                       Storyboard.TargetName="PressRect">
                                            <EasingDoubleKeyFrame KeyTime="0"
                                                                  Value="1" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled"></VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid>
                            <Border x:Name="NormalRect"
                                    Background="{TemplateBinding Background}"
                                    Opacity="1"
                                    BorderThickness="0"
                                    BorderBrush="{DynamicResource BorderBrush}" />
                            <Grid x:Name="OverRect"
                                  Opacity="0">
                                <Border Background="{DynamicResource skinBrush}" />
                                <Border Background="#3fff" />
                            </Grid>
                            <Grid x:Name="PressRect"
                                  Opacity="0">
                                <Border  Background="{DynamicResource skinBrush}" />
                            </Grid>
                            <Grid Margin="{TemplateBinding Padding}">
                                <ContentPresenter x:Name="contentControl1"
                                                  Content="{TemplateBinding Content}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="StyleWindowButton"
           BasedOn="{StaticResource {x:Type Button}}"
           TargetType="Button">
        <Setter Property="Width"
                Value="30" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Padding"
                Value="2,5,2,5" />
    </Style>
    <Style x:Key="StyleSearchButton"
           BasedOn="{StaticResource {x:Type Button}}"
           TargetType="Button"></Style>
</ResourceDictionary>