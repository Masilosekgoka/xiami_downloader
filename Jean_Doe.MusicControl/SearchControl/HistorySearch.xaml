<ComboBox x:Class="Jean_Doe.MusicControl.HistorySearch"
          TextSearch.TextPath="Key"
          Style="{DynamicResource comboStyle}"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ComboBox.ItemTemplate>
        <DataTemplate>
            <DockPanel >
                <TextBlock DockPanel.Dock="Right"   Text="{Binding SearchCount,StringFormat={}搜索{0}次}" />
                <FrameworkElement DockPanel.Dock="Right"   Width="5"/>
                <TextBlock Text="{Binding Key}" VerticalAlignment="Center" TextTrimming="WordEllipsis"/>
            </DockPanel>
        </DataTemplate>
    </ComboBox.ItemTemplate>
</ComboBox>
